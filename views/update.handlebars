<div class="container">
  <h2>Edit Workout</h2>
  <form id="editWorkOut">
    <input type="hidden" name="id" value="{{this.id}}">
    <div class="form-group">
      <label for="name">Exercise:</label>
      <input type="text" class="form-control" id="name" name="name" value="{{this.name}}" placeholder="Deadlift">
    </div>
    <div class="form-group">
      <label for="weight">Weight:</label>
      <input type="number" class="form-control" id="weight"  name="weight" value="{{this.weight}}" placeholder="300">
    </div>
    <div class="form-group">
      <label for="lbs">Unit: 1 = Lbs | 0 = Kgs</label>
      <input type="number" class="form-control" id="lbs" name="lbs" value="{{this.lbs}}" placeholder="1">
    </div>
    <div class="form-group">
      <label for="reps">Reps:</label>
    	<input type="number" class="form-control" id="reps" name="reps" value="{{this.reps}}" placeholder="10">
    </div>
    <div class="form-group">
      <label for="date">Date:</label>
      <input type="text" class="form-control" id="date" name="date" value="{{this.date}}" placeholder="2017-12-30">
    </div>
    <input type="button" class="btn btn-default" value="Update" onclick="updateRow(this)"/>
  </form>
</div>


