<div class="container">
  <h2>Add a workout</h2>
  <form id="addWorkOut">
    <div class="form-group">
      <label for="name">Exercise:</label>
      <input type="text" class="form-control" id="name" name="name" placeholder="Deadlift">
    </div>
    <div class="form-group">
      <label for="weight">Weight:</label>
      <input type="number" class="form-control" id="weight"  name="weight" placeholder="300">
    </div>
    <div class="form-group">
      <label for="lbs">Unit: 1 = Lbs | 0 = Kgs</label>
      <input type="number" class="form-control" id="lbs" name="lbs" placeholder="1">
    </div>    
    <div class="form-group">
      <label for="reps">Reps:</label>
    	<input type="number" class="form-control" id="reps" name="reps" placeholder="5">
    </div>
    <div class="form-group">
      <label for="date">Date:</label>
      <input type="text" class="form-control" id="date" name="date" placeholder="2017-05-30">
    </div>
    <input type="button" class="btn btn-default" value="Add" onclick="insertRow(this)"/>
  </form>
</div>
<br>
<div class="container">
  <h2>Workout History</h2>
	<table class="table table-bordered" id="table">
	    <tr>
	      <th>Exercise</th>
	      <th>Weight</th>
	      <th>1 = Lbs | 0 = Kgs</th>
	      <th>Reps</th>
	      <th>Date</th>
	     	<th>Update/Delete</th>
	    </tr>
	</table>
</div>
